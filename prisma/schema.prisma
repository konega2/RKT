generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("PRISMA_DATABASE_URL")
}

model PreInscripcion {
  id              String   @id @default(uuid())
  nombre          String
  telefono        String
  identidad       String
  edad            Int
  email           String
  seguroAceptado  Boolean
  imagenAceptada  Boolean
  responsabilidad Boolean
  estado          Estado   @default(PENDIENTE)
  confirmedAt     DateTime?
  confirmedBy     String?
  observaciones   String?
  estadoPiloto    EstadoPiloto @default(ACTIVO)
  categoria       Categoria?
  notasCompetitivas String?
  createdAt       DateTime @default(now())
  comentariosInternos ComentarioInterno[]
}

enum Estado {
  PENDIENTE
  CONFIRMADO
}

enum EstadoPiloto {
  ACTIVO
  PENDIENTE_PAGO
  BAJA
}

enum Categoria {
  Junior
  Senior
  Master
}

model ComentarioInterno {
  id        String   @id @default(uuid())
  pilotoId  String
  contenido String
  createdAt DateTime @default(now())

  piloto PreInscripcion @relation(fields: [pilotoId], references: [id], onDelete: Cascade)

  @@index([pilotoId, createdAt])
}
